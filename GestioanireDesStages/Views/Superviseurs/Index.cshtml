@model IEnumerable<GestioanireDesStages.Models.Personne>

@{
    ViewData["Title"] = "Index";
}

<h2>Superviseurs</h2>

<br/>
<br/>
<table class="table table-bordered text-center table-striped">
    <thead>
        <tr>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Nom)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Prenom)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Telephone)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Courriel)
                </th>
               
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telephone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Courriel)
            </td>
           
            <td>
                <a asp-action="Edit" asp-route-id="@item.PersonneId">Modifier</a> |
                <a asp-action="Details" asp-route-id="@item.PersonneId">Détails</a> |
                <a asp-action="Delete" asp-route-id="@item.PersonneId">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
